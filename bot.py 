from telegram import Update
from telegram.ext import Application, CommandHandler, MessageHandler, ContextTypes, filters

# === –ù–ê–°–¢–†–û–ô–ö–ò ===
TOKEN = "8482024659:AAEKPoPYm96dI6DkQTxU6pFanzZKZ7Y9Gvg"   # —Ç–≤–æ–π —Ç–æ–∫–µ–Ω –∏–∑ BotFather
ADMIN_ID = 1822874836                                       # —Ç–≤–æ–π Telegram ID

# === /start: –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ –∏ –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏—è ===
async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    text = (
        "üåô –ü—Ä–∏–≤–µ—Ç! –ú–µ–Ω—è –∑–æ–≤—É—Ç –õ–∞—Ä–∏—Å–∞, —è –ø—Ä–∞–∫—Ç–∏–∫ –¢–∞—Ä–æ –∏ —ç–∑–æ—Ç–µ—Ä–∏–∫–∏.\n"
        "–ü–æ–º–æ–≥–∞—é –Ω–∞—Ö–æ–¥–∏—Ç—å –æ—Ç–≤–µ—Ç—ã —Ç–∞–º, –≥–¥–µ –ª–æ–≥–∏–∫–∞ –º–æ–ª—á–∏—Ç ‚ú®\n\n"
        "üîÆ *–ò–Ω–¥–∏–≤–∏–¥—É–∞–ª—å–Ω—ã–π —Ä–∞—Å–∫–ª–∞–¥ –ø–æ —Ç–≤–æ–µ–º—É –≤–æ–ø—Ä–æ—Å—É*\n\n"
        "üìå *–§–æ—Ä–º–∞—Ç:*\n"
        "–¢—ã –ø–∏—à–µ—à—å —Å–≤–æ–π –≤–æ–ø—Ä–æ—Å ‚Üí —è –¥–µ–ª–∞—é —Ä–∞—Å–∫–ª–∞–¥ –Ω–∞ –∫–∞—Ä—Ç–∞—Ö –¢–∞—Ä–æ ‚Üí –∏ –≤ —Ç–µ—á–µ–Ω–∏–µ –ø–∞—Ä—ã —á–∞—Å–æ–≤ –ø–æ–ª—É—á–∞–µ—à—å –æ—Ç–≤–µ—Ç üíå\n\n"
        "üí∞ *–°—Ç–æ–∏–º–æ—Å—Ç—å:* 500 –≥—Ä–Ω\n\n"
        "üëá –û–ø–ª–∞—Ç–∏ –ø–æ –Ω–æ–º–µ—Ä—É –∫–∞—Ä—Ç—ã, –∞ –ø–æ—Ç–æ–º –æ—Ç–ø—Ä–∞–≤—å —Å—é–¥–∞ üì∑ —Å–∫—Ä–∏–Ω + üìù —Å–≤–æ–π –≤–æ–ø—Ä–æ—Å:\n\n"
        "üá∫üá¶ 4441 1111 4397 8900 (–≥—Ä–Ω)\n"
        "üá™üá∫ 5313 7700 4628 8378 (–µ–≤—Ä–æ)\n\n"
        "–Ø –ø–æ–ª—É—á—É —Ç–≤–æ—ë —Å–æ–æ–±—â–µ–Ω–∏–µ –∏ –æ—Ç–≤–µ—á—É –ø—Ä—è–º–æ –≤ —ç—Ç–æ—Ç —á–∞—Ç üôå"
    )
    await update.message.reply_text(text, parse_mode="Markdown")

# === –ü—Ä–∏—ë–º —Å–æ–æ–±—â–µ–Ω–∏–π –∫–ª–∏–µ–Ω—Ç–∞ –∏ –ø–µ—Ä–µ—Å—ã–ª–∫–∞ –∞–¥–º–∏–Ω—É ===
async def handle_message(update: Update, context: ContextTypes.DEFAULT_TYPE):
    user = update.effective_user
    chat_id = update.effective_chat.id
    message = update.message

    # –ø–µ—Ä–µ—Å—ã–ª–∞–µ–º –∞–¥–º–∏–Ω—É
    await context.bot.send_message(
        ADMIN_ID,
        f"üì© –ù–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç {user.full_name}"
        f"{' (@'+user.username+')' if user.username else ''}\nID: {chat_id}"
    )
    await context.bot.copy_message(ADMIN_ID, chat_id, message.message_id)

    # –∞–≤—Ç–æ-–æ—Ç–≤–µ—Ç –∫–ª–∏–µ–Ω—Ç—É
    await update.message.reply_text(
        "‚ú® –°–ø–∞—Å–∏–±–æ –∑–∞ –¥–æ–≤–µ—Ä–∏–µ!\n\n"
        "–Ø –ø–æ–ª—É—á–∏–ª–∞ —Ç–≤–æ–π –≤–æ–ø—Ä–æ—Å –∏ —Å–∫—Ä–∏–Ω –æ–ø–ª–∞—Ç—ã üôå\n"
        "–°–∫–æ—Ä–æ —Å–¥–µ–ª–∞—é —Ä–∞—Å–∫–ª–∞–¥ –∏ –≤ —Ç–µ—á–µ–Ω–∏–µ –ø–∞—Ä—ã —á–∞—Å–æ–≤ –æ—Ç–ø—Ä–∞–≤–ª—é —Ç–µ–±–µ –ø–æ–¥—Ä–æ–±–Ω—ã–π –æ—Ç–≤–µ—Ç üíå\n\n"
        "üåô –ê –ø–æ–∫–∞ –º–æ–∂–µ—à—å –∑–∞–≥–∞–¥–∞—Ç—å –Ω–∞–º–µ—Ä–µ–Ω–∏–µ ‚Äî —ç—Ç–æ —É—Å–∏–ª–∏—Ç —Ç–≤–æ—ë –ø–æ—Å–ª–∞–Ω–∏–µ –∫–∞—Ä—Ç–∞–º üîÆ"
    )

# === –û—Å–Ω–æ–≤–Ω–æ–π –∑–∞–ø—É—Å–∫ ===
def main():
    app = Application.builder().token(TOKEN).build()
    app.add_handler(CommandHandler("start", start))
    app.add_handler(MessageHandler(filters.TEXT | filters.PHOTO | filters.Document.ALL, handle_message))
    print("ü§ñ –ë–æ—Ç –∑–∞–ø—É—â–µ–Ω...")
    app.run_polling(drop_pending_updates=True)

if __ name__ == "__main__":
    main() 
